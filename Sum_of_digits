#include<stdio.h>
#include<conio.h>


int sum_of_digit(int n)  
{  

    if (n == 0)  

    return 0;  

    return (n % 10 + sum_of_digit(n / 10));  
}

int main()
{
    int number,result;
    clrscr();

        printf("Input number : ");

     scanf("%d",&number);
     result=sum_of_digit(number);

        printf("sum of digits : ");
        printf("%d ",result);
    
return 0;
}
